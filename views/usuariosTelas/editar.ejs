<%- include('../includes/header.ejs', {titulo: 'Editar Usuario'}) %>

<main>
    <h2>Editando Usuário</h2>

    <form action="/usuarios/<%= usuario.id_usuario %>/editar" method="post" class="form">
        <div class="form-group">
            <label for="nome">Nome do usuario:</label>
            <input type="text" name="nome" id="nome" value="<%= usuario.nome %>" required>
        </div>
        <div class="form-group">
            <label for="usuario">Usuario:</label>
            <input type="text" name="usuario" id="username" value="<%= usuario.usuario %>" required>
        </div>
        <div class="form-group">
            <label for="imagem">Imagem</label>
            <input type="url" id="imagem" name="imagem" value="<%=usuario.imagem %>"  required>
        </div>
        <button type="submit" class="btn btn-edit">Salvar Alterações</button>
        <a href="/usuarios" class="btn btn-delete">Cancelar</a>

    </form>
</main>

<%- include('../includes/footer.ejs') %>